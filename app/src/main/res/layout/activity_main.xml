<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textStyle="bold" android:id="@+id/textView"
            android:textSize="18sp" app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="@string/hello_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHelloWorld" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.498"
            android:width="160dp" android:backgroundTint="#00BCD4"/>
    <Button
            android:text="@string/tempConversion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTempConversion" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:width="160dp"
            android:backgroundTint="#8BC34A" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnTimeFighter2"/>
    <Button
            android:text="@string/timefighter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTimeFighter2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnHelloWorld" android:width="160dp"
            android:backgroundTint="#FF9800"/>
    <TextView
            android:text="@string/name_repo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="26dp" android:textAlignment="center"
            android:textStyle="bold"/>

    <Button
            android:id="@+id/btnDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:width="160sp"
            android:backgroundTint="#F44336"
            android:text="@string/dialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnTempConversion" />

</android.support.constraint.ConstraintLayout>